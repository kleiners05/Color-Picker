{
  "manifest_version": 3,
  "name": "Website Background Color Changer",
  "version": "1.0.0",
  "description": "Dynamically change website background colors with a VS Code-style color picker",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_title": "Change Background Color"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["color-picker.css"],
      "run_at": "document_idle"
    }
  ]
}

